                <MenuItem mnemonicParsing="false" onAction="#menuTorolClick" text="Töröl" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Rest1">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Rest2">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label alignment="TOP_CENTER" text="Válasszon egy menüpontot" />
