<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java_eloadas_beadando_2.HelloController">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="Adatbázis">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#menuOlvasClick" text="Olvas" />
                <MenuItem mnemonicParsing="false" onAction="#menuOlvas2Click" text="Olvas2" />
                <MenuItem mnemonicParsing="false" onAction="#menuÍrClick" text="Ír" />
